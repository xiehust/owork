{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for Claude Agent Platform",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "python-backend",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "node",
          "args": true
        },
        {
          "name": "python",
          "args": true
        },
        {
          "name": "python3",
          "args": true
        }
      ]
    },
    "shell:allow-kill",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "dialog:default",
    "notification:default"
  ]
}
