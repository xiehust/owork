# Desktop Application Configuration
# Copy this file to .env in the backend directory when building for desktop

# Application mode
DEBUG=false

# Server
HOST=127.0.0.1
PORT=8000

# Database - Use SQLite for desktop
DATABASE_TYPE=sqlite
# SQLITE_DB_PATH is optional - if not set, uses platform-specific default:
# - macOS: ~/Library/Application Support/ClaudeAgentPlatform/data.db
# - Windows: %LOCALAPPDATA%/ClaudeAgentPlatform/data.db
# - Linux: ~/.local/share/claude-agent-platform/data.db
# SQLITE_DB_PATH=

# CORS - Allow Tauri frontend
CORS_ORIGINS=["http://localhost:1420","tauri://localhost"]

# Claude API Configuration
ANTHROPIC_API_KEY=your-api-key-here

# Model configuration
DEFAULT_MODEL=claude-sonnet-4-5-20250929

# Claude Code Configuration - Use Anthropic API for desktop (not Bedrock)
CLAUDE_CODE_USE_BEDROCK=true
CLAUDE_CODE_DISABLE_EXPERIMENTAL_BETAS=true

# Workspace directories (optional - defaults to platform-specific locations)
# AGENT_WORKSPACE_DIR=
# AGENT_WORKSPACES_DIR=

# Rate limiting (can be more generous for local app)
RATE_LIMIT_PER_MINUTE=1000

# JWT - Still used for session tokens but auth is simplified
JWT_SECRET_KEY=desktop-local-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Sandbox Configuration
SANDBOX_ENABLED_DEFAULT=false
SANDBOX_AUTO_ALLOW_BASH=true
SANDBOX_EXCLUDED_COMMANDS=
SANDBOX_ALLOW_UNSANDBOXED=false
